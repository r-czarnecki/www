doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        title="Change Password"
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", type="text/css", media="screen", href="stylesheets/quiz.css")
    body
        section(class="changePassword")
            h1="Zmień hasło"
            hr
            form(method="POST")
                input(type="hidden" name="_csrf" value=csrfToken)
                p="Nowe hasło: "
                input(type="password" name="newPassword")
                br
                if error
                    p(class="error")=error
                button(type="button" id="cancel" value="cancel")="Anuluj"
                input(type="submit" value="Potwierdź")
        script(src="javascripts/change.js" type="module")
        