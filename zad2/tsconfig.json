{
    "compilerOptions": {
        "module": "ES6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "baseUrl": ".",
        "paths": {
            "*": [
                "../node_modules/*"
            ]
        }
    },
    "include": [
        "./**/*",
        "decs.d.ts",
        "*.ts",
        "src/*.ts",
        "routes/*.ts",
        "public/javascripts/*.ts"
    ]
}